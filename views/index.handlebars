<div class="container buns" id="topBun">
	<div class="row">
		<div align="center" class="col">
			<h1>Eat Da Burger!</h1>
		</div>
	</div>
	<div class="row">
		<div align="center" class="col">
			<img src="/assets/img/pacman.png" alt="burger">
			<img src="/assets/img/burger.png" alt="burger">
			
		</div>
	</div>
</div>
<div class="container">
	<div class="row tomato">
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-6" align="center">
			<h4>Burgers to Eat</h4>
			{{!-- <ul>
				{{#each burgers}}
				{{#unless devoured}}
				{{> burgers/burger-block devour=true}}
				{{/unless}}
				{{/each}}
			</ul> --}}
		</div>
		
		<div class="col-6" align="center">
			<h4>Burgers devoured</h4>
			{{!-- <ul>
				{{#each burgers}}
				{{#if devoured}}
				<li><strong>{{this.burger_name}}</strong></li>
				{{/if}}
				{{/each}}
			</ul> --}}
		</div>
	</div>
	<div class="row">
		<div class="col-6 toEat" align="center">
			{{!-- <h3>Burgers to Eat</h3> --}}
			<ul>
				{{#each burgers}}
				{{#unless devoured}}
				{{> burgers/burger-block devour=true}}
				{{/unless}}
				{{/each}}
			</ul>
		</div>
		
		<div class="col-6 devoured" align="center">
			{{!-- <h3>Burgers devoured</h3> --}}
			<ul>
				{{#each burgers}}
				{{#if devoured}}
				<li><strong>{{this.burger_name}}</strong></li>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>
</div>
<div class="container">
	<div class="row cheese">
		<div align="center" class="col">
			<h2>Add a Burger</h2>
		</div>
	</div>
	<div class="row buns">
		<div align="center" class="col">
			<form class="create-form">
				<div class="form-group">
					<label for="burgerName">Burger Name:</label>
					<input type="text" id="burgerName" name="name">
				</div>
				<button class="btn btn-danger"type="submit">Add Burger</button>
			</form>
		</div>
	</div>
</div>




